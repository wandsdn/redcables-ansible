[Unit]
Description="Faucet OpenFlow switch controller for cisco"
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/default/faucet-cisco
User=faucet
Group=faucet
ExecStart=/usr/local/bin/faucet --ryu-config-file=${FAUCET_RYU_CONF} --ryu-ofp-tcp-listen-port=${FAUCET_LISTEN_PORT}
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
