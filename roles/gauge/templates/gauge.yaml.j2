---
version: 2
faucet_configs:
    - '/etc/ryu/faucet/faucet.yaml'
    - '/etc/ryu/faucet/faucet-l2.yaml'
watchers:
    port_stats_poller:
        type: 'port_stats'
        dps: []
        all_dps: True
        interval: 10
        db: 'prometheus'
    port_state_poller:
        type: 'port_state'
        dps: []
        all_dps: True
        interval: 10
        db: 'influx'
    flow_table_poller:
        type: 'flow_table'
        interval: 60
        dps: []
        all_dps: True
        db: 'prometheus'
dbs:
    influx:
        type: 'influx'
        influx_db: '{{influx_database}}'
        influx_host: 'localhost'
        influx_port: 8086
        influx_user: '{{influx_username}}'
        influx_pwd: '{{influx_password}}'
        influx_timeout: 10
    prometheus:
        type: 'prometheus'
        prometheus_port: 9303
        prometheus_addr: '192.168.122.6'
